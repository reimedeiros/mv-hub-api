generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                   String    @id @default(uuid())
  name                 String
  email                String    @unique
  password             String
  username             String?   @unique
  cpf                  String    @unique
  avatarUrl            String?
  phone                String?
  isActive             Boolean   @default(true)
  role                 UserRole  @default(USER)
  lastLogin            DateTime?
  failedLogins         Int       @default(0)
  emailVerified        DateTime?
  verificationToken    String?   @unique
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?
  lastIp               String?
  registeredIp         String?
  deletedAt            DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

model Establishment {
  id                  Int                         @id @default(autoincrement())
  cnes                String                      @unique @db.Char(7)
  cnpj                String                      @db.Char(14)
  tradeName           String                      @db.VarChar(255)
  corporateName       String                      @db.VarChar(255)
  address             String                      @db.VarChar(255)
  zipCode             String                      @db.Char(8)
  directorCpf         String                      @db.Char(11)
  classificationId    Int
  classification      EstablishmentClassification @relation(fields: [classificationId], references: [id])
  mainActivityId      String?
  mainActivity        Activity?                   @relation("MainActivity", fields: [mainActivityId], references: [id])
  secondaryActivityId String?
  secondaryActivity   Activity?                   @relation("SecondaryActivity", fields: [secondaryActivityId], references: [id])
  susSystem           Boolean                     @db.TinyInt
  createdAt           DateTime                    @default(now())
  updatedAt           DateTime                    @updatedAt
}

// =======================
// Auxiliary tables
// =======================

model EstablishmentClassification {
  id             Int             @id @default(autoincrement())
  description    String          @db.VarChar(500)
  establishments Establishment[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Activity {
  id                      String          @id @db.VarChar(2)
  activity                String          @db.VarChar(100)
  description             String          @db.VarChar(3000)
  mainEstablishments      Establishment[] @relation("MainActivity")
  secondaryEstablishments Establishment[] @relation("SecondaryActivity")
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
}
