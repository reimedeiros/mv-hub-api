generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-test"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_TEST")
}

model Users {
  id                   String    @id @default(uuid())
  name                 String
  email                String    @unique
  password             String
  username             String?   @unique
  cpf                  String    @unique
  avatarUrl            String?
  phone                String?
  isActive             Boolean   @default(true)
  role                 UserRole  @default(USER)
  lastLogin            DateTime?
  failedLogins         Int       @default(0)
  emailVerified        DateTime?
  verificationToken    String?   @unique
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?
  lastIp               String?
  registeredIp         String?
  deletedAt            DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

// =======================
// Establishment table
// =======================
model Establishment {
  id                  Int                         @id @default(autoincrement())
  cnes                String
  cnpj                String
  tradeName           String
  corporateName       String
  address             String
  zipCode             String
  directorCpf         String
  classificationId    Int
  classification      EstablishmentClassification @relation(fields: [classificationId], references: [id])
  mainActivityId      String?
  mainActivity        Activity?                   @relation("MainActivity", fields: [mainActivityId], references: [id])
  secondaryActivityId String?
  secondaryActivity   Activity?                   @relation("SecondaryActivity", fields: [secondaryActivityId], references: [id])
  susSystem           Boolean
  createdAt           DateTime                    @default(now())
  updatedAt           DateTime                    @updatedAt
}

// =======================
// Auxiliary tables
// =======================

model EstablishmentClassification {
  id             Int             @id @default(autoincrement())
  description    String
  establishments Establishment[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Activity {
  id                      String          @id
  activity                String
  description             String
  mainEstablishments      Establishment[] @relation("MainActivity")
  secondaryEstablishments Establishment[] @relation("SecondaryActivity")
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
}
